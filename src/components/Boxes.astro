---
const { content, subSection, children } = Astro.props;
---

<div class="container mx-auto p-6 text-slate-800 max-w-[800px]">
  <div class="grid grid-cols-1 gap-2 md:gap-6 pb-6">
    <div class="py-6 bg-white flex flex-col gap-4 px-6 md:px-12 items-center justify-center leading-relaxed text-base md:text-lg text-center font-light text-xl  rounded-lg shadow-lg">
       <content.Content />
    </div>
  </div>

   <div class="grid grid-cols-5 gap-2 md:gap-6">
     <div class="bg-white flex flex-col col-span-3 row-span-2 items-center justify-center text-sm md:text-lg font-semibold rounded-lg shadow-lg p-4">
        <div class="text-slate-500">
          {content.frontmatter.b2subtitle}
        </div>    
        <div class="p-2">
          {content.frontmatter.b2content}
        </div>
    </div>
     <div class="bg-white flex flex-col col-span-1 h-[100px] p-4 items-center justify-center text-sm md:text-lg font-semibold rounded-lg shadow-lg">
      <!-- <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-external-link"><path d="M15 3h6v6"/><path d="M10 14 21 3"/><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"/></svg> -->
      <a href={content.frontmatter.linkHref} target="_blank" class="text-wrap break-all" >
        {content.frontmatter.link}
      </a>
    </div>
    <div class="bg-white flex flex-col p-1 col-span-1 h-[100px] p-4 items-center justify-center text-sm text-center md:text-lg font-semibold rounded-lg shadow-lg">
      
      <div class="text-xl md:text-2xl">
      {content.frontmatter.metric}
      </div>
      <div class="text-xs md:text-md">
        {content.frontmatter.metricText}
      </div>
      

    </div>
        <!-- <div class="bg-white flex flex-col col-span-2 p-2 items-center justify-center text-lg font-semibold rounded-lg shadow-lg">
          <div class="text-slate-500">
            {content.frontmatter.b3subtitle}
          </div>    
          <div class="justify-center">
            {(content.frontmatter.b3content || '').split(',').map((text:string)=>{return <div>{text}</div>})}
          </div>
      </div> -->
     <div class="bg-white  flex flex-col items-center col-span-5 justify-center text-sm md:text-lg font-semibold rounded-lg shadow-lg p-4">
         <slot name="box2" class="h-[300px]" />
    </div>

  </div>
  
</div>