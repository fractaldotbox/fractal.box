---
import { Image } from "astro:assets";

const { name, title, avatar, url } = Astro.props;

const avatarPaths = import.meta.glob<{ default: ImageMetadata }>(
	"/src/assets/avatar*.{jpeg,jpg,png,gif,svg}",
);
---

<a href={url} target="_blank" style="text-decoration: none;">
<div>
        <div class="flex w-full  justify-center items-center">
                <Image alt={name} class="w-24 h-24 rounded-full" src={avatarPaths[`/${avatar}`]()}  />
        </div>            
                <div class="pt-1 text-center justify-center items-center w-full font-semibold">
                        {name}
                </div>
                <div class=" text-center justify-center items-center w-full font-semibold text-slate-500">
                        {title}
                </div>
        </div>
        </div>

</div>
</a>